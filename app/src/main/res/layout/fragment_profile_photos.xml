<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.brill.bdatingapp.fragments.ProfilePhotosFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scrollbars="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:weightSum="3"
             android:gravity="center_horizontal">
<android.support.v7.widget.CardView
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/immBtn1"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</android.support.v7.widget.CardView>

             <android.support.v7.widget.CardView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">

              <ImageView
                   android:layout_weight="1"
                   android:id="@+id/immBtn2"
                 android:layout_margin="3dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
/>
             </android.support.v7.widget.CardView>

             <android.support.v7.widget.CardView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">

               <ImageView
                   android:id="@+id/immBtn3"
                   android:layout_margin="3dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
/>

             </android.support.v7.widget.CardView>

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:weightSum="3"
             android:gravity="center_horizontal">

             <android.support.v7.widget.CardView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/immBtn4"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_margin="3dp"
                   android:layout_height="wrap_content"
/>
             </android.support.v7.widget.CardView>

             <android.support.v7.widget.CardView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">

             <ImageView
                   android:id="@+id/immBtn5"
                   android:layout_weight="1"
                   android:layout_width="match_parent"

             android:layout_margin="3dp"
                   android:layout_height="wrap_content"
/>

             </android.support.v7.widget.CardView>
             <android.support.v7.widget.CardView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">

             <ImageView
                   android:id="@+id/immBtn6"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_margin="3dp"
                   android:layout_height="wrap_content"
/>
             </android.support.v7.widget.CardView>

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:weightSum="3"
             android:gravity="center_horizontal">

                <ImageView
                   android:id="@+id/immBtn7"
                    android:layout_weight="1"
                   android:layout_width="match_parent"

                    android:layout_margin="3dp"
                   android:layout_height="wrap_content"
/>


                <ImageView
                   android:id="@+id/immBtn8"
                    android:layout_weight="1"
                   android:layout_width="match_parent"

                    android:layout_margin="3dp"
                   android:layout_height="wrap_content"
/>



               <ImageView
                   android:id="@+id/immBtn9"
                   android:layout_weight="1"
                   android:layout_width="match_parent"

                   android:layout_margin="3dp"
                   android:layout_height="wrap_content"
/>


         </LinearLayout>


      </LinearLayout>

   </ScrollView>

</FrameLayout>
