<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.hp.bdating.ProfileActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--   <ImageView
               android:layout_width="100dp"
               android:layout_height="90dp"
               android:id="@+id/photouser"
               android:src="@drawable/backg"
               android:layout_marginLeft="20dp"
               android:layout_gravity="center_vertical|center_horizontal"/>
    -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photouser"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"

                android:layout_marginLeft="20dp"
                android:src="@drawable/ashutosh" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtusername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:maxLength="18"

                        android:text="Ashutosh Chaudhary"
                        android:textColor="@android:color/black"

                        android:textSize="20dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtgenAgeCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:paddingTop="5dp"
                    android:text="Jaipur"
                    android:textColor="#373737"
                    android:textSize="15dp"
                    android:textStyle="normal" />


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/online_icon"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/online_icon" />
    </android.support.v7.widget.CardView>
</LinearLayout>
