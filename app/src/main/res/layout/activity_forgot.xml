<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_login_gradients"
    tools:context="com.example.brill.bdatingapp.LoginActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:src="@drawable/bdlogo"
        android:padding="4dp"
        />

    <android.support.v7.widget.CardView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
        app:cardBackgroundColor="#ffffff"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/forgotlayForgot"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >



                <TextView
                    android:text="Forgot Password ?"
                    android:gravity="center_horizontal"
                    android:textColor="#2f3c44"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <EditText

                    android:layout_marginTop="20dp"
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bkgrd_redlogin1"
                    android:hint="Email ID"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textColor="#334249"
                    android:textColorHint="#334249"/>

                <Button
                    android:id="@+id/btnContinue"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" Continue"
                    android:clickable="true"
                    android:textColor="#f16371"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textAllCaps="false"
                    android:background="@drawable/bkgd_red_2"/>


            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/forgotlayOtp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:text="Enter OTP"
                    android:gravity="center_horizontal"
                    android:textColor="#2f3c44"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


                <LinearLayout
                    android:id="@+id/otplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:weightSum="5">
                    <EditText
                        android:layout_weight="3.5"
                        android:id="@+id/edtOtp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext1"
                        android:hint="Enter OTP Here"
                        android:padding="7dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="#334249"
                        android:textColorHint="#334249"/>

                    <TextView
                        android:layout_weight="1.5"
                        android:text="Resend OTP"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:textColor="#087ac1"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/btnOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Procced"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_bbtn_actn"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/forgotlayNewPass"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <TextView
                    android:text="Change Password"
                    android:gravity="center_horizontal"
                    android:textColor="#2f3c44"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/edtNewPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext1"
                    android:hint="New Password"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:gravity="center_horizontal"

                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textColor="#334249"
                    android:textColorHint="#334249"/>
                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/edtConNewPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext1"
                    android:hint="Confirm Password"
                    android:drawablePadding="10dp"
                    android:padding="7dp"
                    android:gravity="center_horizontal"

                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textColor="#334249"
                    android:textColorHint="#334249"/>




                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_bbtn_actn"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>
        </FrameLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
