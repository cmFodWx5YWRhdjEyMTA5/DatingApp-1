<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/new_login_gradients"
    tools:context="com.example.brill.bdatingapp.SignUpActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/login_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/brillicon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="24dp"
        android:paddingLeft="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">



        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:hint="Email Address"
            android:textColorHint="#fe97a0"
            android:maxLines="1"
            android:inputType="text"
            android:background="@drawable/bkgrd_redlogin1"
            android:id="@+id/edtEmail"
            android:layout_marginTop="5dp"
           />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:hint="Full Name"
            android:textColorHint="#fe97a0"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:background="@drawable/bkgrd_redlogin1"
            android:id="@+id/edtFullName"
            android:layout_marginTop="5dp"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:hint="Phone"
            android:textColorHint="#fe97a0"
            android:maxLines="1"
            android:inputType="number"
            android:background="@drawable/bkgrd_redlogin1"
            android:id="@+id/edtPhone"
            android:layout_marginTop="5dp"
         />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:hint="Password"
            android:textColorHint="#fe97a0"
            android:maxLines="1"
            android:inputType="textPassword"
            android:background="@drawable/bkgrd_redlogin1"
            android:id="@+id/edtPassword"
            android:layout_marginTop="5dp"
           />

        <Spinner
            android:layout_marginTop="5dp"
            android:background="@drawable/bkgrd_redlogin1"
            android:id="@+id/spinnerGender"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:spinnerMode="dropdown"
            android:popupBackground="#f4f4f4"
            style="@style/mainspinner_style"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:popupElevation="0px"
            android:dropDownWidth="match_parent"
            android:gravity="center_horizontal"
            android:overlapAnchor="false"
            android:ellipsize="marquee"
            tools:ignore="MissingPrefix"
            android:textAppearance="?android:textAppearanceSmall"/>



        <EditText

            android:background="@drawable/bkgrd_redlogin1"
            android:id="@+id/edtdob"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="D. O. B."
            android:gravity="center_horizontal"
            android:drawablePadding="10dp"
            android:editable="false"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="#334249"
          />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:clickable="true"
                android:textColor="#f16371"
                android:padding="16dp"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textAllCaps="false"
                android:background="@drawable/bkgd_red_2"/>

        </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
